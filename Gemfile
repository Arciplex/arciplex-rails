  gem 'sass-rails', '~> 4.0.0'
  gem 'bootstrap-sass', '~> 3.0.3.0'
  gem 'coffee-rails', '~> 4.0.0'
  gem 'jquery-rails'
end

group :development, :test do
  gem 'debugger'
  gem 'faker'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'spork-rails'
  gem "database_cleaner"
  gem 'guard-rspec'
  gem "shoulda-matchers"
end