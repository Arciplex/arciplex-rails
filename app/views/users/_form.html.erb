<%= form_for current_user, url: update_password_user_path, html: { role: "form", class: "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :password, class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", class: "col-md-4 control-label" %>
    <div class="col-md-5">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10">
      <%= f.submit "Submit", class: "btn btn-success", data: { disable_with: "Processing..." } %>
    </div>
  </div>

<% end %>
