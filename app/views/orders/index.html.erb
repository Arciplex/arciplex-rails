<% content_for :page_title do %>
  <h2><%= params[:status].try(:capitalize) if params[:status] %> Orders</h2>
<% end %>

<div class="row">

  <div class="col-md-9 col-md-offset-3">
      <%= link_to "Create New Order", new_company_order_path(params[:company_id]), class: "btn btn-primary #{:'pull-right' unless @orders.empty?}" %>

      <% unless @orders.empty? %>

        <p>Your current Orders</p>

        <table class="table table-striped table-condensed" id="customer-table">
          <tr>
            <td>Name</td>
            <td>Order Number</td>
            <td>Date Submitted</td>
            <td>Status</td>
            <td>Actions</td>
          </tr>
          <%= render @orders %>
        </table>

        <%= will_paginate @orders, renderer: BootstrapPagination::Rails %>

      <% end %>
  </div>

</div>
