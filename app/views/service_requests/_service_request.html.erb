<tr data-id="<%= service_request.id %>">
  <td><%= service_request.customer_full_name %></td>
  <td><%= service_request.id %></td>
  <td><%= service_request.formatted_time %></td>
  <td class="sr-status"><%= convert_opened_to_open(service_request.status) %></td>
  <td class="actions">
      <%= link_to "View", company_service_request_path(company_id: service_request.company_id, id: service_request), class: "btn-sm btn-warning" %>
      <% if can?(:edit, service_request) %>
        <%= link_to "Edit", edit_company_service_request_path(company_id: service_request.company_id, id: service_request), class: "btn-sm btn-warning" %>

        <% if service_request.pending? %>
          <%= link_to "Received", received_company_service_request_path(company_id: service_request.company_id, id: service_request), method: :patch, remote: true, data: { confirm: "Are you sure?" }, class: "btn-sm btn-warning received-btn" %>
        <% end %>

        <% if service_request.opened? %>
          <%= link_to "Close", complete_company_service_request_path(company_id: service_request.company_id, id: service_request), method: :patch, class: "btn-sm btn-warning", data: { confirm: "Are you sure?" } %>
        <% end %>
      <% end %>

      <% if can?(:destroy, service_request) %>
        <%= link_to "Remove", company_service_request_path(company_id: service_request.company_id, id: service_request), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-sm btn-warning" %>
      <% end %>

  </td>
</tr>
