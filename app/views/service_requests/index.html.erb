<% content_for :page_title do %>
  <h2><%= params[:status].try(:capitalize) if params[:status] %> Service Requests</h2>
<% end %>

<div class="row">
  
  <div class="col-md-9 col-md-offset-3">
      <%= link_to "Create New Service Request", new_service_request_path, class: "btn btn-primary #{:'pull-right' unless @service_requests.empty?}" %>
      
      <% unless @service_requests.empty? %>
      
        <p>Your current Service Requests</p>
      
        <table class="table table-striped table-condensed" id="customer-table">
          <tr>
            <td>Name</td>
            <td>Case Number</td>
            <td>Date Submitted</td>
            <td>Status</td>
            <td>Actions</td>
          </tr>
          <%= render @service_requests %>
        </table>
        
        <%= will_paginate @service_requests, renderer: BootstrapPagination::Rails %>
        
      <% end %>
  </div>
  
</div>