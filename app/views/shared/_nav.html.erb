<div class="navbar navbar-fixed-top" role="navigation">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>" id="<%= current_user.try(:company_name).try(:downcase) || 'arciplex' %>"></a>
    <% if user_signed_in? %>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
          <% if current_user.admin? %>
            <li><%= link_to "Admin Dashboard", admin_path %></li>
          <% end %>
          <% if params[:company_id].present? %> 
            <% if can?(:create, ServiceRequest) %>
              <li class="dropdown">
                <%= link_to company_service_requests_path(params[:company_id]), class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
                  Service Requests <span class="caret"></span>
                <% end %>
                
                <ul class="dropdown-menu">
                  <li><%= link_to "All", company_service_requests_path(params[:company_id]) %></li>
                  <li><%= link_to "Open", company_service_requests_path(company_id: params[:company_id], status: "opened") %></li>
                  <li><%= link_to "Pending", company_service_requests_path(company_id: params[:company_id],status: "pending") %></li>
                  <li><%= link_to "Closed", company_service_requests_path(company_id: params[:company_id],status: "closed") %></li>
                </ul>
              </li>
            <% end %>
          <% end %>
          <li><%= link_to "Logout", logout_path %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>