<div class="navbar navbar-fixed-top" role="navigation">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>"></a>
    <% if user_signed_in? %>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
          <% if can?(:manage, Customer) %>
            <li><%= link_to "Customers", customers_path %></li>
          <% end %>
          <% if can?(:manage, ServiceRequest) %>
            <li class="dropdown">
              <%= link_to service_requests_path, class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
                Service Requests <span class="caret"></span>
              <% end %>
              
              <ul class="dropdown-menu">
                <li><%= link_to "All", service_requests_path %></li>
                <li><%= link_to "Open", service_requests_path(status: "pending") %></li>
                <li><%= link_to "Closed", service_requests_path(status: "processed") %></li>
              </ul>
            </li>
          <% end %>
          <li><%= link_to "Logout", logout_path %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>