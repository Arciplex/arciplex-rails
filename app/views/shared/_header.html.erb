  <![endif]-->
  
  <%= csrf_meta_tags %>
</head>
<body class="<%= :'signed-in' if user_signed_in? %>">
  
  <div class="navbar navbar-fixed-top" role="navigation">
    <div class="container">
      <a class="navbar-brand" href="<%= root_path %>"></a>
      <% if user_signed_in? %>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav pull-right">
            <li><%= link_to "Service Request", new_service_request_path %></li>
            <li><%= link_to "Dates", new_service_request_path %></li>
            <li><%= link_to "Notes", new_service_request_path %></li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>