<div class="row">
  <div class="devise-login col-md-6 col-md-offset-3">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "login-form", role: "form" }) do |f| %>
      <h2 class="form-signin-heading">Please, sign into your account</h2>
      <div class="input-group">
        <span class="input-group-addon"><%= fa_icon "user" %></span>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %>
      </div>
    
      <div class="input-group">
        <span class="input-group-addon"><%= fa_icon "lock" %></span>
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
    
      <div class="pull-right"><%= f.submit "Sign in", class: "btn btn-success" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Keep me signed in" %></div>
      <% end -%>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
