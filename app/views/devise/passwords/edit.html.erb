<div class="row">
  <div class="devise-login col-md-6 col-md-offset-3">

    <h2>Change your password</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "login-form", role: "form" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="input-group">
        <span class="input-group-addon"><%= fa_icon "lock" %></span>
        <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Password" %>
      </div>

      <div class="input-group">
        <span class="input-group-addon"><%= fa_icon "lock" %></span>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
      </div>

      <div class="pull-right"><%= f.submit "Change my password", class: "btn btn-success" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
