<div class="row">
  <div class="devise-login col-md-6 col-md-offset-3">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "login-form", role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-group">
        <span class="input-group-addon"><%= fa_icon "email" %></span>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %>
      </div>

      <div class="pull-right"><%= f.submit "Send me reset password instructions", class: "btn btn-success" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
