<%= form_for [:admin, @user], html: { role: "form", class: "form-horizontal" } do |f| %>
    <%= render 'shared/errors', object: @user if @user.errors.any? %>

    <div class="form-group">
        <%= f.label :first_name, class: "col-md-4 control-label" %>
        <div class="col-md-5">
            <%= f.text_field :first_name, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :last_name, class: "col-md-4 control-label" %>
        <div class="col-md-5">
            <%= f.text_field :last_name, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :email, class: "col-md-4 control-label" %>
        <div class="col-md-5">
            <%= f.email_field :email, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :role, class: "col-md-4 control-label" %>
        <div class="col-md-5">
            <%= f.select :role, User::ROLES.map { |r| [r.humanize, r] }, class: "form-control", id: nil, prompt: true %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :companies, class: "col-md-4 control-label" %>
        <div class="col-md-5">
            <%= f.collection_select :company_ids, @companies, :id, :name, {prompt: "Please select"}, {multiple: true} %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <%= f.submit "Submit", class: "btn btn-success", data: { disable_with: "Processing..." } %>
        </div>
    </div>
<% end %>
