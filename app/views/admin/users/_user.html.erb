<tr data-id="<%= user.id %>">
  <td><%= user.full_name.presence || "N/A" %></td>
  <td><%= user.email %></td>
  <td class="actions">
    <%= link_to admin_user_path(user) do  %>
      <%= content_tag(:i, "", class: "glyphicon glyphicon-search") -%>
    <% end %>
    <%= link_to edit_admin_user_path(user) do %>
      <%= content_tag(:i, "", class: "glyphicon glyphicon-pencil") -%>
    <% end %>
    <%= link_to admin_user_path(user), method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <%= content_tag(:i, "", class: "glyphicon glyphicon-remove") -%>
    <% end %>
  </td>
</tr>
