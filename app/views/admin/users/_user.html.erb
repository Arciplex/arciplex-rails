<tr data-id="<%= user.id %>">
  <td><%= user.full_name.presence || "N/A" %></td>
  <td><%= user.email %></td>
  <td><%= user.company_name %></td>
  <td class="actions">
    <%= link_to "View", admin_user_path(user), class: "btn-sm btn-warning" %>
    <%= link_to "Edit", edit_admin_user_path(user), class: "btn-sm btn-warning" %>
    <%= link_to "Remove", admin_user_path(user), method: :delete,
        data: { confirm: "Are you sure?" }, class: "btn-sm btn-warning" %>
  </td>
</tr>
