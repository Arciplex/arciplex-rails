<% content_for :page_title do %>
  <h2>Users</h2>
  <p>All Users</p>
<% end %>

<div class="row">

  <div class="col-md-9 col-md-offset-3">
        <%= link_to "Create New User", new_admin_user_path, class: "btn btn-primary #{:'pull-right' unless @users.empty?}" %>

      <% unless @users.empty? %>

        <p>Current Users</p>

        <table class="table table-striped table-condensed" id="customer-table">
          <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Actions</td>
          </tr>
          <%= render @users %>
        </table>

        <%= will_paginate @users, renderer: BootstrapPagination::Rails %>

      <% end %>
  </div>

</div>
